pipeline{
    agent any
    environment {
        maven = 'maven'
    }
    stages{
        stage("Build"){
            steps{
                script {
                    cd maven-code-coverage
                    mvn clean install
                }
            }
            post{
                success{
                    archiveArtifacts artifacts: 'target/*.jar'
                    junit 'maven-code-coverage/target/surefire-reports/**/*.xml'
                }
                failure{
                    echo "========Build execution failed========"
                }
            }
        }
    }
    post{
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
